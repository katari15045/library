<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alert_dialog_cant_connect_text_view_title"
        android:text="@string/alert_dialog_cant_connect_text_view_title_db"
        android:textColor="@color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alert_dialog_cant_connect_button"
        android:background="@drawable/button_shape"
        android:text="@string/alert_dialog_cant_connect_button_title"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"/>

</LinearLayout>