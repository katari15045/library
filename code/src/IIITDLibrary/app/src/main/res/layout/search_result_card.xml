<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/search_result_card"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_result_card_textview_title"
        android:text="Three Easy Pieces"
        android:maxLength="@integer/max_str_len"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_result_card_textview_author"
        android:text="Vitaly, Roman, Logan"
        android:maxLength="@integer/max_str_len"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>

</LinearLayout>