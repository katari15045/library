<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.katari15045.iiitdlibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".startup.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".search.SearchActivity" />
        <activity android:name=".biblio.BiblioActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".staticScreens.TimingsActivity" />
        <activity android:name=".staticScreens.OccupancyActivity" />
        <activity android:name=".home.HomeActivity"></activity>


        <activity android:name=".PurchaseSuggestionActivity" />
        <activity
            android:name=".FineDetailsActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SuggestionActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MessagingActivity"
            android:parentActivityName=".MessagingActivity"/>
        <activity android:name=".AskForDischargeActivity"
            android:parentActivityName=".MainActivity"></activity>

    </application>

</manifest>